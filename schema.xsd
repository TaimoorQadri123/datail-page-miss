                                </xsd:simpleType>
                            </xsd:element>
            <xsd:element name="age"  >
                <xsd:simpleType>
                    <xsd:restriction base="xsd:int">
                        <xsd:pattern value="[0-9]{1,15}"></xsd:pattern>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            
                        </xsd:sequence>
                    </xsd:complexType>
                </xsd:element>
